<body>
<style>
  
</style>
  
  <div class="container">
      <div class="d-flex justify-content-center">
          <h2 class="display-4 text-title" style="font-size: 36px;">Thêm thực phẩm</h2>
          <a name="next"></a>
      </div>
      <div class="d-flex justify-content-center">
    <form action="/food" method="POST" class="form-inline" role="form">
      <div class="d-flex flex-column">
        <div class="p-2">
          <div class="form-row" style="text-align:justify">
            
                <div class="col" style="border-color:transparent;min-width:10rem;max-width: 19rem;">
                    <h2 class="display-4 text-title" style="font-size: 20px;">Thông tin thực phẩm</h2>
                    <input class="form-control mt-2" type="text" name="name" placeholder="Tên thực phẩm">
                    
                    <select name="loaiThucPham" id="loaiThucPham" class="form-control mt-2" >
                      <option value="">-- Select One --</option>
                    </select>

                    
                    <textarea name="info" id="info" class="form-control mt-2" rows="6" required="required" ></textarea>
                  
                        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                        
                       <div class="form-group" >
                         <label class="custom-file">
                           <input type="file" name="anh" id="anh" placeholder="" style="border-radius:25px" class="custom-file-input" aria-describedby="fileHelpId">
                           <span class="custom-file-control">Chọn file ảnh</span>
                         </label>
                         <small id="fileHelpId" class="form-text text-muted">Chọn file kích thước vừa phải</small>
                       </div>
                    
                </div>
                <div class="col"  style="border-color:transparent;min-width:10rem;max-width: 19rem;">
                    <h2 class="display-4 text-title" style="font-size: 20px;">Hàm lượng dinh dưỡng</h2>
                  <input class="form-control mt-2" style="border-radius:25px" type="number" name="calo" placeholder="Lượng kcalo">
                </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    <br>
    <div class="p-2">
      <div class="d-flex justify-content-center">
    
        <button type="submit" class="btn btn-outline-success" >Lưu lại</button>
      </div>
    </div>
    </form>
  </div>
  </div>
  
    
  






    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
