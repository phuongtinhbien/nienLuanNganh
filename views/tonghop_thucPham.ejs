</head>
<script>
        var key=[ "giaTriDinhDuong",
            "lipid",
            "cholesterol",
            "natri",
            "kali",
            "cacbohydrat",
            "chatXo",
            "duong",
            "protein",
            "vitaminA",
            "vitaminC",
            "vitaminD",
            "vitaminB12",
            "vitaminB6",
            "canxi",
            "sat",
            "magie",
            "chatBeoChuyenHoa",
            "calo"
        ]
        
            function update(){
            var result= {
                "giaTriDinhDuong":0,
                "lipid":0,
                "cholesterol":0,
                "natri":0,
                "kali":0,
                "cacbohydrat":0,
                "chatXo":0,
                "duong":0,
                "protein":0,
                "vitaminA":0,
                "vitaminC":0,
                "vitaminD":0,
                "vitaminB12":0,
                "vitaminB6":0,
                "canxi":0,
                "sat":0,
                "magie":0,
                "chatBeoChuyenHoa":0,
                "calo":0,
            }
            var checked = [];
            $(".custom-control-input:checked").each(function() {
                console.log($(this).val());
                checked.push($.parseJSON($(this).val()));
                
            });
            checked.forEach(function (val,i){
                key.forEach((value, j)=>{
                    result[value]+=val[value];
                })
            });
            key.forEach((value, j)=>{

                    document.getElementById(value).innerText= result[value];
                })
      

            
        }
</script>
<body onload="update()">
  
    <%- include("partials/nav") %>
    <div class="d-flex justify-content-center" style="margin-bottom:50px">
        
            <img src="/nutri"  alt="Image" height="150px">
        </div>
    <%- include("partials/full_bua_an_dd") %>
    <div class="dropdown-divider" style=" margin-top: 50px;margin-left:50px; margin-right:50px"></div>
    
    <div class="container" style="margin:0 auto" >

            <div class="d-flex justify-content-center">
                    <h2 class="display-4" style="font-size: 36px; margin-bottom:20px">Bữa ăn dinh dưỡng</h2>
                    <a name="next"></a>
                </div>
            <div class="card-deck">
                    <div class="card" style="border-color:transparent">
                            <div class="container" style="margin-top:10px">
                                    
                                    <span class=" text-title" style="font-size:20px; margin-bottom:20px ">Danh sách thực phẩm</span>

                                    <% for(var i=1; i<=len; i++) {%>
                                        <%- include("partials/item_choose_thucPham",{data:data[i-1]}) %>
                                     <% } %>
                                   
                                    
                                </div>
                    </div>
                              <div class="card" >
                                    <span class=" text-title" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size:20px; margin:10px">Thông tin dinh dưỡng</span>
                                    
                                    <table class="table table-hover"   style="font-family:sans-serif;font-size:13px">
                                        <tbody>
                                            <tr>
                                                <th>Giá trị dinh dưỡng</th>
                                                <td ><span id="giaTriDinhDuong"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Calo (kcal)</th>
                                                <td ><span id="calo"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Lipid</th>
                                                <td ><span id="lipid"></span></td>
                                            </tr>
                                            <tr>
                                                    <th>Chất béo chuyển hóa</th>
                                                    <td ><span id="chatBeoChuyenHoa"></span></td>
                                                </tr>
                                            <tr>
                                                <th>Cholesterol</th>
                                                <td ><span id="cholesterol"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Natri</th>
                                                <td ><span id="natri"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Kali</th>
                                                <td ><span id="kali"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Cacbohydrat<br>
                                                    <ul>
                                                        <li>Đường:</li>
                                                        <li>Chất xơ:</li>
                                                    </ul>
                                                </th>
                                                <td><span id="cacbohydrat"></span><br>
                                                    
                                                    <span id="duong"></span><br>
                                                    <span id="chatXo"></span>
                                                   
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>Protein</th>
                                                <td ><span id="protein"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Vitamin A</th>
                                                <td ><span id="vitaminA"></span></td>
                                            </tr>
