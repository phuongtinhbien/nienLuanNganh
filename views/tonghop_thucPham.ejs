                                                <td ><span id="vitaminC"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Vitamin D</th>
                                                <td ><span id="vitaminD"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Vitamin B12</th>
                                                <td ><span id="vitaminB12"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Vitamin B6</th>
                                                <td ><span id="vitaminB6"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Canxi</th>
                                                <td ><span id="canxi"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Sắt</th>
                                                <td ><span id="sat"></span></td>
                                            </tr>
                                            <tr>
                                                <th>Magiê</th>
                                                <td ><span id="magie"></span></td>
                                            </tr>
                                        </tbody>
                                        
                                    </table>
                                    
                                </div>
        
                    </div>
                   
    </div>
            
    </div>
    

  

